<h1>Stores</h1>

<form action="store/new" method="post">
  <label>new store name:</label>
  <input type="text" name="name">
  <button type="submit">submit</button>
</form>

<% if @stores.any?() %>
  <ul>
    <% @stores.each() do |store| %>
      <li><%= store.name() %></li>
      <% end %>
  </ul>
<% else %>
  <p>There are no stores added yet</p>
<% end %>

<a href="/">home</a>
