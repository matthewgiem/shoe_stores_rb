<h1>Brands</h1>
<form action="brand/new" method="post">
  <label>new brand name:</label>
  <input type="text" name="name">
  <button type="submit">submit</button>
</form>

<% if @brands.any?() %>
  <ul>
    <% @brands.each() do |brand| %>
      <li><%= brand.name() %></li>
      <% end %>
  </ul>
<% else %>
  <p>There are no brands added yet</p>
<% end %>

<a href="/">home</a>
